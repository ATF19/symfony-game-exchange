{% extends 'base.html.twig' %}

{% block body %}

  <section class="hero hero-panel" style="background-image: url(http://127.0.0.1:8000/img/cover/cover-register.jpg);">
  <div class="hero-bg"></div>
  <div class="container relative">
  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 pull-none margin-auto">
      <div class="panel panel-default panel-login">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-users"></i> Sign in</h3>
        </div>
        <div class="panel-body">
          <form method="POST" action="connecterPost" name="form">
            <input type="text" class="form-control" placeholder="Email..." name="email" /><br /><br />
            <input type="password" class="form-control" placeholder="Password..." name="password" /><br /><br />
            {% if app.request.get('error') != NULL %}
              <p style="color: #c0392b">Email ou mot de passe incorrect !</p>
            {% endif %}
            <input type="submit" value="Sign in" class="btn btn-primary btn-block" />
          </form>
        </div>
        <div class="panel-footer">
          Don't have an account? <a href="http://127.0.0.1:8000/utilisateur/new">Sign Up</a>
        </div>
      </div>
    </div>
  </div>
  </div>
  </section>



	{% endblock %}
