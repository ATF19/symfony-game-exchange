{% extends 'base.html.twig' %}

{% block body %}
<section class="hero hero-games height-300" style="background-image: url(http://127.0.0.1:8000/img/cover/cover-game.jpg);">
    <div class="hero-bg"></div>
    <div class="container">
      <div class="page-header">
        <div class="page-title bold"><a href="#">
          {% if app.request.get('search') != NULL %} Search for {{app.request.get('search')}}
          {% elseif app.request.get('cat') == NULL %} All games
          {% else %} {{app.request.get('cat')}} games
          {% endif %}
        </a></div>
        <p></p>
      </div>
    </div>
  </section>

  <section class="bg-grey-50">
  			<div class="container">
          {% if app.request.get('success') != NULL %}
            <div class="alert alert-success">
							<strong>Succes</strong> {{app.request.get('success')}}
						</div>
          {% endif %}
            {% for jeux in jeuxes %}
  					<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
  						<div class="card">
  							<div class="card-img">
  								<a href="http://127.0.0.1:8000/anonce?game={{jeux.id}}"><img src="http://127.0.0.1:8000/images/{{ jeux.path }}" ></a>
  								<div class="category"><span class="label label-success">{{ jeux.console }}</span></div>
  								<div class="meta"><a href="#"><i class="fa fa-heart-o"></i> <span></span></a></div>
  							</div>
  							<div class="caption">
  								<h3 class="card-title"><a href="http://127.0.0.1:8000/anonce?game={{jeux.id}}">{{ jeux.libelle }}</a></h3>
                  <a href="http://127.0.0.1:8000/addgame?id={{jeux.id}}" class="btn bt-round btn-block btn-primary">Add to my games</a>
  							</div>
  						</div>
  					</div>
            {% endfor %}

        </section>

{% endblock %}
