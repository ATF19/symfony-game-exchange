{% extends 'base.html.twig' %}

{% block body %}
<!-- wrapper -->
<div id="wrapper">
	<section class="background-image" style="background-image: url(https://img.youtube.com/vi/QV7PK8AVEKA/maxresdefault.jpg);">
		<span class="background-overlay"></span>
		<div class="container">
			<div class="embed-responsive embed-responsive-16by9">
				<iframe class="embed-responsive-item" src="http://www.youtube.com/embed/QV7PK8AVEKA?rel=0&amp;showinfo=0" allowfullscreen></iframe>
			</div>
		</div>
	</section>


	<section class="bg-grey-50 padding-top-50 padding-bottom-10">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					<div class="title outline">
						<h4><i class="fa fa-gamepad"></i> Recent Offers</h4>
						<p>Here's a list of the recent offers in our website</p>
					</div>
				</div>
			</div>
			<div class="row">
				{% for anonce in anonces %}
				<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
					<div class="card card-video">
						<div class="card-img">
							<a href="{{ path('anonce_show', { 'id': anonce.id }) }}"><img src="http://127.0.0.1:8000/images/{{ anonce.jeux.path }}" alt=""></a>
							<div class="time">{{anonce.jeux.console}}</div>
						</div>
						<div class="caption">
							<h3 class="card-title"><a href="{{ path('anonce_show', { 'id': anonce.id }) }}">{{anonce.jeux.libelle}}</a></h3>
							<div class="text-center"><i style="font-size:28px;margin-bottom:10px;" class="fa fa-exchange fa-rotate-90"></i></div>
							<h3 class="card-title"><a href="{{ path('anonce_show', { 'id': anonce.id }) }}">{{anonce.jeuxDemandee.libelle}}</a></h3>
							<ul>
								<li><i class="fa fa-user"></i> Posted by {{anonce.utilisateur.prenom}} {{anonce.utilisateur.nom}}</li>
							</ul>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
			<div class="text-center"><a href="http://127.0.0.1:8000/anonce" class="btn btn-primary btn-lg btn-shadow btn-rounded btn-icon-right margin-top-10 margin-bottom-40">Load More</a></div>
		</div>
	</section>

	<section class="bg-primary subtitle">
		<div class="container">
			<h2>Sign up now to create your own offer</h2>
			<a href="http://127.0.0.1:8000/utilisateur/new" target="_blank" class="btn btn-white btn-outline">Register<i class="fa fa-user-plus margin-left-10"></i></a>
		</div>
	</section>
</div>
<!-- /#wrapper -->

{% endblock %}
